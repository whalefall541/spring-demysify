<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	   xmlns:aop="http://www.springframework.org/schema/aop">

	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="propertyEditorRegistrars">
			<list>
				<ref bean="datePropertyEditorRegistrar"/>
			</list>
		</property>
	</bean>

	<bean id="datePropertyEditorRegistrar" class="org.springframework.mylearntest.ioc.beanfactorypostprocessor.DatePropertyEditorRegistrar">
		<property name="propertyEditor">
			<ref bean="datePropertyEditor"/>
		</property>
	</bean>

	<bean id="datePropertyEditor" class="org.springframework.mylearntest.ioc.beanfactorypostprocessor.DatePropertyEditor">
		<property name="datePattern">
			<value>yyyy/MM/dd</value>
		</property>
	</bean>
</beans>